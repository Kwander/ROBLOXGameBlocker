{
  "manifest_version": 3,
  "name": "ROBLOX Game Blocker",
  "version": "1.0",
  "description": "Blocks specific Roblox games from appearing on the website",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.roblox.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 